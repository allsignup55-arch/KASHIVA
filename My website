    <script>
        // Cart functionality
        let cart = [];
        const cartIcon = document.getElementById('cartIcon');
        const cartCount = document.getElementById('cartCount');
        
        // Payment modal elements
        const paymentModal = document.getElementById('paymentModal');
        const closePayment = document.getElementById('closePayment');
        const manualPaymentModal = document.getElementById('manualPaymentModal');
        const closeManualPayment = document.getElementById('closeManualPayment');
        
        // Add to cart function
        function addToCart(product, price) {
            const existingItem = cart.find(item => item.product === product);
            
            if (existingItem) {
                existingItem.quantity += 1;
            } else {
                cart.push({
                    product: product,
                    price: price,
                    quantity: 1
                });
            }
            
            updateCartCount();
            showNotification(`${product} added to cart!`);
        }
        
        // Update cart count display
        function updateCartCount() {
            const totalItems = cart.reduce((total, item) => total + item.quantity, 0);
            cartCount.textContent = totalItems;
        }
        
        // Open payment modal for products
        function openPayment(productName, price, iconClass) {
            document.getElementById('paymentProductName').textContent = productName;
            document.getElementById('paymentProductPrice').textContent = price;
            document.getElementById('paymentProductIcon').className = iconClass;
            
            paymentModal.style.display = 'flex';
        }
        
        // Open manual payment modal
        function openManualPayment() {
            manualPaymentModal.style.display = 'flex';
        }
        
        // Close payment modals
        closePayment.addEventListener('click', () => {
            paymentModal.style.display = 'none';
        });
        
        closeManualPayment.addEventListener('click', () => {
            manualPaymentModal.style.display = 'none';
        });
        
        // Close modals when clicking outside
        window.addEventListener('click', (e) => {
            if (e.target === paymentModal) {
                paymentModal.style.display = 'none';
            }
            if (e.target === manualPaymentModal) {
                manualPaymentModal.style.display = 'none';
            }
        });
        
        // Function to open UPI apps for product payments
        function openUPIApp(appName) {
            const upiId = "8812907033@fam";
            const amount = document.getElementById('paymentProductPrice').textContent;
            const productName = document.getElementById('paymentProductName').textContent;
            const note = `Payment for ${productName} from KASHIVA`;
            
            openAppWithUPI(appName, upiId, amount, note);
        }
        
        // Function to open UPI apps for manual payments
        function openManualUPIApp(appName) {
            const upiId = "8812907033@fam";
            const amountInput = document.getElementById('manualAmount');
            const amount = amountInput.value;
            
            if (!amount || amount < 1) {
                alert("Please enter a valid amount");
                amountInput.focus();
                return;
            }
            
            const note = `Payment to KASHIVA`;
            
            openAppWithUPI(appName, upiId, amount, note);
        }
        
        // Common function to open UPI apps
        function openAppWithUPI(appName, upiId, amount, note) {
            let upiUrl;
            
            // Create UPI URL based on selected app
            switch(appName.toLowerCase()) {
                case 'google pay':
                    upiUrl = `tez://upi/pay?pa=${upiId}&pn=KASHIVA&am=${amount}&cu=INR&tn=${encodeURIComponent(note)}`;
                    break;
                case 'phonepe':
                    upiUrl = `phonepe://pay?pa=${upiId}&pn=KASHIVA&am=${amount}&cu=INR&tn=${encodeURIComponent(note)}`;
                    break;
                case 'paytm':
                    upiUrl = `paytmmp://pay?pa=${upiId}&pn=KASHIVA&am=${amount}&cu=INR&tn=${encodeURIComponent(note)}`;
                    break;
                case 'fam pay':
                    upiUrl = `fampay://pay?pa=${upiId}&pn=KASHIVA&am=${amount}&cu=INR&tn=${encodeURIComponent(note)}`;
                    break;
                default:
                    // Generic UPI URL
                    upiUrl = `upi://pay?pa=${upiId}&pn=KASHIVA&am=${amount}&cu=INR&tn=${encodeURIComponent(note)}`;
            }
            
            // Try to open the UPI app
            window.location.href = upiUrl;
            
            // Fallback: If app is not installed, show instructions after a delay
            setTimeout(function() {
                if (!document.hidden) {
                    showNotification(`If ${appName} doesn't open, please manually open the app and send ₹${amount} to ${upiId}`);
                    
                    // Show detailed instructions in a modal
                    setTimeout(function() {
                        const confirmed = confirm(
                            `Payment Instructions:\n\n1. Open ${appName} manually\n2. Send ₹${amount} to UPI ID: ${upiId}\n3. Add note: ${note}\n\nClick OK to copy UPI ID to clipboard`
                        );
                        
                        if (confirmed) {
                            copyUPI();
                        }
                    }, 1500);
                }
            }, 1000);
        }
        
        // Function to copy UPI ID
        function copyUPI() {
            const upiId = "8812907033@fam";
            navigator.clipboard.writeText(upiId).then(function() {
                showNotification("UPI ID copied to clipboard: " + upiId);
            }, function(err) {
                // Fallback for older browsers
                const textArea = document.createElement("textarea");
                textArea.value = upiId;
                document.body.appendChild(textArea);
                textArea.select();
                document.execCommand('copy');
                document.body.removeChild(textArea);
                showNotification("UPI ID copied to clipboard: " + upiId);
            });
        }
        
        // Show notification
        function showNotification(message) {
            // Remove existing notifications
            const existingNotifications = document.querySelectorAll('.custom-notification');
            existingNotifications.forEach(notification => {
                notification.remove();
            });
            
            // Create notification element
            const notification = document.createElement('div');
            notification.textContent = message;
            notification.className = 'custom-notification';
            notification.style.cssText = `
                position: fixed;
                top: 20px;
                right: 20px;
                background: var(--primary);
                color: white;
                padding: 15px 20px;
                border-radius: 5px;
                z-index: 10000;
                box-shadow: 0 5px 15px rgba(0,0,0,0.2);
                animation: slideIn 0.3s ease;
                max-width: 300px;
            `;
            
            document.body.appendChild(notification);
            
            // Remove notification after 4 seconds
            setTimeout(() => {
                notification.style.animation = 'slideOut 0.3s ease';
                setTimeout(() => {
                    if (document.body.contains(notification)) {
                        document.body.removeChild(notification);
                    }
                }, 300);
            }, 4000);
        }

        // Add CSS for notification animation
        const style = document.createElement('style');
        style.textContent = `
            @keyframes slideIn {
                from { transform: translateX(100%); opacity: 0; }
                to { transform: translateX(0); opacity: 1; }
            }
            @keyframes slideOut {
                from { transform: translateX(0); opacity: 1; }
                to { transform: translateX(100%); opacity: 0; }
            }
        `;
        document.head.appendChild(style);
    </script>
</body>
</html>
